@using CarQuery.ViewModels.AccountViewModels
@model RegisterViewModel

@section Styles {
	<style>
		form {
			color: white;
			border-radius: 10px;
			margin-top: 5%;
		}
	</style>
}

<form class="col-10 col-lg-4 mx-auto py-4 bg-dark d-flex justify-content-center" asp-controller="Account" asp-action="Register" method="post">
	<div class="col-10">
		<h3>Registrar novo administrador</h3>
		<br />
		<div class="form-group">
			<label asp-for="UserName"></label>
			<input class="form-control" asp-for="UserName"/>
			<span class="text-danger" asp-validation-for="UserName"></span>
		</div>
		<br />
		<div class="form-group">
			<label asp-for="Email"></label>
			<input class="form-control" asp-for="Email" type="email" />
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>
		<br />
		<div class="form-group">
			<label asp-for="Password"></label>
			<input class="form-control" asp-for="Password" type="password" />
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>
		<br />
		<div class="form-group">
			<label asp-for="ConfirmPassword"></label>
			<input class="form-control" asp-for="ConfirmPassword" type="password" />
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
		</div>
		<br />

		<p class="text-danger">@Html.Raw(TempData["ErrorMessage"])</p>
		<button class="btn btn-success">Criar</button>
	</div>
</form>

