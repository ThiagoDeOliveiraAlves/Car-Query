@model ReflectionIT.Mvc.Paging.PagingList<CarQuery.Models.Car>


@section Styles {
	<style>
		.list-cars-box {
			gap: 10px;
		}

		.car-card {
			border: 1px solid blue;
			text-decoration: none;
			height: 300px;
			margin: 3px;
			background-color: rgb(247, 247, 247);
			color: #4b4b4b;
		}

			.car-card:hover {
				border-color: blue;
				background-color: #e7ebf9;
				color: blue;
			}

			.car-card p {
				font-size: 20px;
			}

		.car-card-img {
			display: flex;
			background-color: black;
			width: 100%;
			justify-content: center;
			object-fit: cover;
			overflow: hidden;
		}

			.car-card-img img {
				height: 180px;
				width: auto;
			}

		.car-card-text {
			padding: 0 15px;
		}

		.pagination {
			display: flex;
			list-style: none;
			padding-left: 0;
		}

			.pagination li {
				margin: 0 4px;
			}

				.pagination li a {
					display: block;
					padding: 8px 12px;
					border: 1px solid #dee2e6;
					color: #007bff;
					text-decoration: none;
					border-radius: 4px;
					transition: background-color 0.3s, color 0.3s;
				}

					.pagination li a:hover {
						background-color: #e9ecef;
						color: #0056b3;
					}

				.pagination li.active a {
					background-color: #007bff;
					color: white;
					border-color: #007bff;
				}

				.pagination li.disabled a {
					color: #6c757d;
					pointer-events: none;
					background-color: #fff;
					border-color: #dee2e6;
				}
	</style>
}
<div class="container">
	<div class="d-flex justify-content-end mt-4">
		<vc:pager paging-list="@Model" class="pagination justify-content-center"></vc:pager>
	</div>

	<h3>Resultados</h3>
	<hr />

	<div class="d-flex row list-cars-box">
		@foreach (var car in Model)
		{
			<a class="car-card col-5 col-lg-2 card-link px-0 border" asp-controller="Car" asp-action="CarDetailsPage" asp-route-id="@car.CarId">
				<div class="car-card-img">
					<img class="fluid" src="@(car.Images.Count > 0 ? car.Images[0].ImgPath : "")" />
				</div>
				<div class="car-card-text mt-1">
					<strong>@car.Brand @car.Model</strong>
					<br />
					<strong>Ano: </strong>@car.ModelYear
					<br />
					<strong>Potência: </strong>@car.Power cv

				</div>
			</a>
		}
	</div>
</div>

