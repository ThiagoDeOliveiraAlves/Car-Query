@model ReflectionIT.Mvc.Paging.PagingList<CarQuery.Models.Car>


@section Styles {
	<style>
		.car-card {
			border: 1px solid;
			padding: 10px 0;
			height: 300px;
			margin: 3px;
			background-color: rgb(247, 247, 247);
		}

			.car-card:hover {
				border-color: blue;
				background: #e7ebf9;
				color: blue;
			}

			.car-card p {
				font-size: 20px;
			}


		.card-link {
			text-decoration: none;
			color: inherit;
			padding: 0;
			margin: 0;
			display: block;
			height: 100%;
		}

		.car-card-img {
			background-color: black;
			width: 100%;
			height: 160px;
			display: flex;
			justify-content: center;
			align-items: center;
			overflow: hidden;
		}
			.car-card-img img {
				object-fit: cover;
				width: 100%;
				height: 100%;
			}

		.pagination {
			display: flex;
			justify-content: center;
			gap: 40px;
			padding: 10px;
		}
	</style>
}
<div class="container">
	<div class="d-flex justify-content-end mt-4">
		<vc:pager paging-list="@Model" class="pagination justify-content-center"></vc:pager>
	</div>

	<h3>Carros</h3>
	<hr />

	<div class="d-flex row">
		@foreach (var car in Model)
		{

			<div class="car-card col-5 col-lg-2">
				<a class="card-link" asp-controller="Car" asp-action="CarDetailsPage" asp-route-id="@car.CarId">
					<div class="car-card-img">
						<img src="@car.Images[0].ImgPath" />
					</div>
					<br />
					@car.Brand @car.Model
					<br />
					Ano: @car.ModelYear
					<br />
					Potência: @car.Power cv
				</a>
			</div>
		}
	</div>
</div>

