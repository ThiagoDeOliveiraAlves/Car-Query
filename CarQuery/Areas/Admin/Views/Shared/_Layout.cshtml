<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarQuery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarQuery.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <style>
        header {
            background-color: black;
            color: white;
            font-size: 1.1em;
        }

        .header-input {
            border: 2px solid rgb(228, 228, 225);
            border-radius: 15px;
            background-color: black;
            color: white;
            width: clamp(30px, 100%, 200px);
            padding-left: 15px;
            outline: none;
        }

            .header-input:focus {
                background-color: rgb(31, 31, 30);
            }

        .carousel-background {
            background-color: black;
        }

        .carousel-title {
            padding: 20px 0;
            margin: 0 10%;
            color: rgb(194, 194, 194);
        }

        .carousel-car-info {
            color: rgb(194, 194, 194);
            font-size: 1.5em;
            padding: 10px 20px;
        }

        .carousel {
            background-color: rgb(32, 31, 31);
            width: 80%;
            margin: auto;
        }
    </style>
</head>
<body>
    <header>
        <div class="row align-items-center ms-lg-5 me-lg-5 ms-1 me-1">
            <div class="col-3 col-lg-7">
                <h6 class="display-6">Car Query</h6>
            </div>
            <div class="d-flex col-2 col-lg-1 justify-content-end">
                Notícias
            </div>
            <div class="d-flex col-2 col-lg-1 justify-content-end">
                <a asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
            </div>
            <div class="d-flex col-5 col-lg-3 justify-content-end">
                <input type="text" class="header-input" placeholder="Pesquisar">
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CarQuery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
