@model ReflectionIT.Mvc.Paging.PagingList<CarQuery.Models.Car>


@section Styles {
	<style>
		.car-card {
			border: 1px solid;
			border-radius: 10px;
			background-color: rgb(247, 247, 247);
		}

			.car-card p {
				font: 20px;
			}

		.car-card-img {
			border-radius: 10px;
			display: flex;
			background-color: black;
			width: 100%;
			justify-content: center;
			object-fit: cover;
			overflow: hidden;
		}

			.car-card-img img {
				height: 140px;
				width: auto;
			}

		.custom-modal-overlay {
			display: none;
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: rgba(0, 0, 0, 0.5);
			justify-content: center;
			align-items: center;
		}

		.custom-modal-box {
			display: block;
			background-color: black;
			color: white;
			padding: 20px;
			border-radius: 10px;
			text-align: center;
			width: 320px;
			box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
		}

		.custom-modal-buttons {
			margin-top: 15px;
			display: flex;
			justify-content: space-between;
		}

		.btn {
			padding: 8px 15px;
			border: none;
			border-radius: 5px;
			cursor: pointer;
		}

		.btn-danger {
			background-color: #dc3545;
			color: white;
		}

		.btn-secondary {
			background-color: #6c757d;
			color: white;
		}

		.pagination {
			display: flex;
			list-style: none;
			padding-left: 0;
		}

			.pagination li {
				margin: 0 4px;
			}

				.pagination li a {
					display: block;
					padding: 8px 12px;
					border: 1px solid #dee2e6;
					color: #007bff;
					text-decoration: none;
					border-radius: 4px;
					transition: background-color 0.3s, color 0.3s;
				}

					.pagination li a:hover {
						background-color: #e9ecef;
						color: #0056b3;
					}

				.pagination li.active a {
					background-color: #007bff;
					color: white;
					border-color: #007bff;
				}

				.pagination li.disabled a {
					color: #6c757d;
					pointer-events: none;
					background-color: #fff;
					border-color: #dee2e6;
				}
	</style>
}
<div class="container">
	<h1 class="mt-4">Gerenciar carros</h1>
	<hr />
	<form method="get" class="d-flex mt-2">
		<div class="row col-12">
			<div class="col-8">
				<input name="filter" class="form-control" placeholder="Informe o veículo que quer gerenciar" value="@Model.RouteValue["Filter"]" />
			</div>
			<div class="col-4">
				<button type="submit" class="btn btn-info">
					<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
				</button>
			</div>
		</div>
	</form>

	<hr />

	<div class="d-flex justify-content-end mt-2">
		<vc:pager paging-list="@Model" class="pagination justify-content-center"></vc:pager>
	</div>

	@foreach (var car in Model)
	{
		<div class="row car-card mt-3 mx-2">
			<div class="d-flex align-items-center">
				<div class="col-4 col-lg-2 my-2 car-card-img">
					<img src="@(car.Images.Count > 0 ? car.Images[0].ImgPath : "")">
				</div>
				<div class="col-4 ms-lg-5 ms-3">
					<p>@car.Brand @car.Model</p>
					<div class="d-flex gap-2">
						<a asp-area="" asp-controller="Car" asp-action="CarDetailsPage" asp-route-id="@car.CarId">Detalhes</a>
						||
						<a asp-controller="AdminCar" asp-action="Edit" asp-route-id="@car.CarId">Editar</a>
						||
						<a href="#" class="text-danger" onclick="openConfirmBox('@car.CarId')">Deletar</a>
					</div>
				</div>
			</div>
		</div>
	}

	<div id="customConfirmBox" class="custom-modal-overlay">
		<div class="custom-modal-box">
			<form asp-controller="AdminCar" asp-action="Delete" class="" method="post">
				<h2>Confirmar Exclusão</h2>
				<p class="mb-0">Tem certeza que deseja deletar este carro?</p>
				<p class="text-danger fw-semibold mt-0">Os slides que usam as imagens deste veículo também serão deletados. Essa ação não pode ser desfeita.</p>				<input type="hidden" name="id" id="deleteId" />
				<div class="custom-modal-buttons">
					<button type="button" onclick="closeConfirmBox()" class="btn btn-secondary">Cancelar</button>
					<button type="submit" class="btn btn-danger">Sim, Deletar</button>
				</div>
			</form>
		</div>
	</div>

	<script>
		function openConfirmBox(carId) {
			document.getElementById("deleteId").value = carId;
			document.getElementById("customConfirmBox").style.display = "flex";
		}

		function closeConfirmBox() {
			document.getElementById("customConfirmBox").style.display = "none";
		}
	</script>

</div>
