@model Car
@{
}

<div class="container">
    <h1 class="display-5">Editar carro</h1>

    <form asp-action="Edit" method="post" class="form-group" enctype="multipart/form-data">
        <div class="row">
            <input type="hidden" asp-for="CarId"/>
            <div class="col-4">
                <label asp-for="Brand">Marca do carro:</label>
                <input class="form-control" asp-for="Brand" value="@Model.Brand"/>
                <span class="text-danger" asp-validation-for="Brand"></span>
            </div>

            <div class="col-4">
                <label asp-for="Model">Modelo:</label>
                <input class="form-control" asp-for="Model" value="@Model.Model" />
                <span class="text-danger" asp-validation-for="Model"></span>
            </div>

            <div class="col-4">
                <label asp-for="Year">Ano:</label>
                <input class="form-control" asp-for="Year" value="@Model.Year" />
                <span class="text-danger" asp-validation-for="Year"></span>
            </div>

        </div>


        <div class="row mt-4">
            <div class="col-3">
                <label asp-for="Power">Potência (CV):</label>
                <input class="form-control" asp-for="Power" value="@Model.Power" />
                <span class="text-danger" asp-validation-for="Power"></span>
            </div>

            <div class="col-4">
                <label asp-for="Drivetrain">Tração:</label>
                <input class="form-control" asp-for="Drivetrain" value="@Model.Drivetrain" />
                <span class="text-danger" asp-validation-for="Drivetrain"></span>
            </div>
            <div class="col-5">
                <label asp-for="Engine">Motor:</label>
                <input class="form-control" asp-for="Engine" value="@Model.Engine" />
                <span class="text-danger" asp-validation-for="Engine"></span>
            </div>

        </div>

        <div class="row mt-4">
            <div class="col-3">
                <label asp-for="EnginePosition">Posição do motor:</label>
                <input class="form-control" asp-for="EnginePosition" value="@Model.EnginePosition" />
                <span class="text-danger" asp-validation-for="EnginePosition"></span>
            </div>
            <div class="col-4">
                <label asp-for="TransmissionType">Transmissão:</label>
                <input class="form-control" asp-for="TransmissionType" value="@Model.TransmissionType" />
                <span class="text-danger" asp-validation-for="TransmissionType"></span>
            </div>

            <div class="col-3">
                <label asp-for="TopSpeed">Velocidade máxima:</label>
                <input class="form-control" asp-for="TopSpeed" value="@Model.TopSpeed" />
                <span class="text-danger" asp-validation-for="TopSpeed"></span>
            </div>

            <div class="col-2">
                <label asp-for="Doors">Portas:</label>
                <input class="form-control" asp-for="Doors" value="@Model.Doors" />
                <span class="text-danger" asp-validation-for="Doors"></span>
            </div>
        </div>
        <div class="">
            <label asp-for="Price">Preço (R$):</label>
            <input class="form-control" asp-for="Price" value="@Model.Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="">
            <label asp-for="ShortDescription">Descrição curta:</label>
            <input class="form-control" asp-for="ShortDescription" value="@Model.ShortDescription" />
            <span class="text-danger" asp-validation-for="ShortDescription"></span>
        </div>

        <div class="">
            <label asp-for="FullDescription">Descrição completa:</label>
            <input class="form-control" asp-for="FullDescription" value="@Model.FullDescription" />
            <span class="text-danger" asp-validation-for="FullDescription"></span>
        </div>
        <div class="">
            <label asp-for="Images">Imagens:</label>
            <input type="file" class="form-control" asp-for="Images" multiple />
            <span class="text-danger" asp-validation-for="Images"></span>
        </div>

        <div class="">
            <label asp-for="VideoLink">Video link:</label>
            <input class="form-control" asp-for="VideoLink" value="@Model.VideoLink" />
            <span class="text-danger" asp-validation-for="VideoLink"></span>
        </div>

        <h4 class="mt-3">Imagens:</h4>

        <div class="row">
            <div class="d-flex">
                @{
                    int index = 0;
                }
                @foreach (var img in Model.Images)
                {
                    <div class="col-2 mx-3 my-4">
                        <p>Id: @index</p>
                        <img src="@img.ImgPath" class="img-fluid" />
                    </div>

                    index += 1;
                }
            </div>
        </div>
        <label>Digite os ids das imagens que deseja excluir:</label>
        <input class="form-control" name="imgIndexDelete" placeholder="Exemplo: 1,4,5"/>

        <div class="form-group mt-4">
            <input type="submit" class="btn btn-success" value="Salvar" />
        </div>
    </form>
</div>
